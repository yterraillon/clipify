{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft": "Warning",
            "Microsoft.Hosting.Lifetime": "Information"
        }
    },
    "AllowedHosts": "*",
    "ConnectionStrings": {
        "LiteDB": "/data/Clipify.db"
    },
    "SpotifyAuth": {
        "ClientId": "06e60e8e48db4378a95783a631ffbe60",
        "AuthorizeUrl": "https://accounts.spotify.com/authorize",
        "AccessTokenUrl": "https://accounts.spotify.com/api/token",
        "AuthorizeRedirectUrl": "https://localhost:5001/callback/"
    },
    "SpotifyEndpoints": {
        "BaseUrl": "https://api.spotify.com/v1/",
        "ProfileEndpoint": "me",
        "UserPlaylistsEndpoint": "users/{USER_ID}/playlists",
        "PlaylistEndpoint": "playlists/{PLAYLIST_ID}",
        "PlaylistTracksEndpoint": "playlists/{PLAYLIST_ID}/tracks"
    },
    "ApiEndpoints": {
        "BaseUrl": "https://localhost:5001/api"
    },
    "Serilog": {
        "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
        "MinimumLevel": "Information",
        "WriteTo": [
            { "Name":  "Console" },
            {
                "Name": "File",
                "Args": {
                    "restrictedToMinimumLevel": "Error",
                    "path": "Logs/log.txt",
                    "rollingInterval": "Day"
                }
            }
        ],
        "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
        "Destructure": [
            {
                "Name": "ToMaximumDepth",
                "Args": { "maximumDestructuringDepth": 4 }
            },
            {
                "Name": "ToMaximumStringLength",
                "Args": { "maximumStringLength": 100 }
            },
            {
                "Name": "ToMaximumCollectionCount",
                "Args": { "maximumCollectionCount": 10 }
            }
        ],
        "Properties": {
            "Application": "Clipify"
        }
    }
}
