
<button type="button" class="@Class flex flex-row items-center justify-center rounded-md" @onclick="@InvokeOnClickMethod" disabled="@IsDisabled">
    @ChildContent
</button>

@code {
#nullable enable
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    [Parameter]
    public string Class { get; set; } = string.Empty;

    [Parameter]
    public Action OnClickAction { get; set; } = () => {};

    [Parameter]
    public bool IsDisabled { get; set; } = false;

    private void InvokeOnClickMethod()
    {
        OnClickAction?.Invoke();
    }
}